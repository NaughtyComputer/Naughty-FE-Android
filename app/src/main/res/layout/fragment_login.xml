<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="30dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.22" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_btn_kakao_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.72" />

    <ImageView
        android:id="@+id/iv_login_logo"
        android:layout_width="144dp"
        android:layout_height="178dp"
        android:src="@drawable/ic_splash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gl_login_logo" />

    <TextView
        android:id="@+id/btn_kakao_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="카카오로 시작하기"
        android:textColor="@color/black"
        style="@style/title_sm_200"
        android:padding="17dp"
        android:background="@drawable/bg_kakao_login"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gl_btn_kakao_login" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_kakao"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="@+id/btn_kakao_login"
        app:layout_constraintTop_toTopOf="@+id/btn_kakao_login"
        app:layout_constraintBottom_toBottomOf="@+id/btn_kakao_login" />

    <TextView
        android:id="@+id/btn_google_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Google로 시작하기"
        android:textColor="@color/black"
        style="@style/title_sm_200"
        android:padding="17dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_google_login"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_kakao_login" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_google"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="@+id/btn_google_login"
        app:layout_constraintTop_toTopOf="@+id/btn_google_login"
        app:layout_constraintBottom_toBottomOf="@+id/btn_google_login" />

</androidx.constraintlayout.widget.ConstraintLayout>